@startuml
title Reservation::changeSeat(newSeat : Seat)

start
if (newSeat.status <> SeatStatus::Available) then ([true])
  :raise("Seat is already reserved.");
  stop
else ([false])
  :r.seat.status := SeatStatus::Available;
  :r.seat := newSeat;
  :newSeat.status := SeatStatus::Reserved;
endif
stop
@enduml
