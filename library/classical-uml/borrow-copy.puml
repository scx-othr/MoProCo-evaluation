@startuml
title Member::borrowCopy(c : Copy) : Loan

start
if (c.status <> CopyStatus::Available) then ([true])
  :raise("Copy is not available.");
  stop
else ([false])
  :l := new Loan;
  :l.book := b;
  :l.member := this;
  :l.loanDate := now();
  :l.dueDate := now().plusMonths(6);
  :c.status := CopyStatus::OnLoan;
  :l.closed := false;
  :return l;
  stop
endif
@enduml
